@model WesserApplicants.Models.ApplicantTownViewModel

@{
    ViewData["FirstName"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New Applicant</a>
</p>

<form asp-controller="Applicants" asp-action="Index" method="get">
    <p>
        <select asp-for="ApplicantTown" asp-items="Model.Towns">
            <option value="">All</option>
        </select>

        Name: <input asp-for="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Applicants[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applicants[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applicants[0].EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applicants[0].MobileNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applicants[0].HomeNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applicants[0].Address1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applicants[0].Address2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applicants[0].Address3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applicants[0].Town)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applicants[0].County)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applicants[0].PostCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applicants[0].StartingDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Applicants) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Town)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.County)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartingDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
